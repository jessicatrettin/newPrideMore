@model newPrideMore.Models.ProfessionalType

@{
    ViewData["Title"] = "Destalhes: Profissão | Especialidades";
}

<h2>Detalhes</h2>

<h4>@Html.DisplayFor(model => model.Profission) | @Html.DisplayFor(model => model.Speciality)</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <span>Profissão</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profission)
        </dd>
        <dt class="col-sm-2">
            <span>Especialidade</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Speciality)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">← Voltar</a>
</div>
