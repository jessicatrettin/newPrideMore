@model newPrideMore.Models.Professional

@{
    ViewData["Title"] = "Excluir profissional";
}

<h2>@ViewData["Title"]</h2>

<h4>PROFISSIONAL ESPECIALISTA</h4>
<hr />
<h4>Você tem certeza que quer excluir?</h4>
<form asp-action="Delete">
    <input type="hidden" asp-for="Email" />
    <input type="submit" value="Sim" class="btn btn-danger" />
</form>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <span>Nome</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <span>CPF</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            <span>Profissão</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfessionalType)
        </dd>
        <dt class="col-sm-2">
            <span>Registro profissional</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Register)
        </dd>
        <dt class="col-sm-2">
            <span>E-mail</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            <span>Endereço de atendimento</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            <span>Contato</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            <span>Instagram</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instagram)
        </dd>
        <dt class="col-sm-2">
            <span>Convênios</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HealthInsurance)
        </dd>
    </dl>


    <div>
        <a asp-action="FindProfessional">← Voltar</a>
    </div>
</div>
