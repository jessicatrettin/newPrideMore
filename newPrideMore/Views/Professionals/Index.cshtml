@model IEnumerable<newPrideMore.Models.Professional>

@{
    ViewData["Title"] = "Todos os profissionais";
}

<h2>Todos os profissionais</h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-dark">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Nome</span>
            </th>
            <th>
                <span>Profissão</span>
            </th>
            <th>
                <span>Especialidade</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessionalType.Profission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessionalType.Speciality)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Email">+ informações</a>
            </td>
        </tr>
        }
    </tbody>
</table>